@using System.Security.Claims
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - MedicOcup</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
<div class="navbar navbar-inverse navbar-fixed-top">
    <header class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <li><a href="~/Home"><div class="logohost"></div></a></li>
        </div>
        <div id="menu" class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                
                @{
                    if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Início", "Index", "Home")</li>
                        <li>
                            <a id="dLabel" role="button" data-toggle="dropdown" class="navbar-collapse collapse" data-target="#" href="/page.html">
                                Cadastros <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                <li><a href="/Area/Registrar">Área</a></li>
                                <li><a href="/Cargo/Registrar">Cargo</a></li>
                                <li><a href="/Exame/Registrar">Exames</a></li>
                                <li><a href="/Especialidade/Registrar">Especialidade</a></li>
                            </ul>
                        </li>
                        <li>
                            <a id="dLabel" role="button" data-toggle="dropdown" class="navbar-collapse collapse" data-target="#" href="/page.html">
                                Consultar <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu " role="menu" aria-labelledby="dropdownMenu">
                                <li><a href="/Funcionario">Funcionários</a></li>
                                <li><a href="/Area">Áreas</a></li>
                                <li><a href="/Cargo">Cargos</a></li>
                                <li><a href="/Exame">Exames</a></li>
                                <li><a href="/Especialidade">Especialidades</a></li>
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>

                        if (User.IsInRole("Admin"))
                        {
                            <li>@Html.ActionLink("Admin Roles", "Index", "RolesAdmin")</li>
                        }

                        var claimsIdentity = User.Identity as ClaimsIdentity;
                        var claim = claimsIdentity.FindFirst(c => c.Type == "AdmUsers");

                        if (claim != null)
                        {
                            if (claim.Value == "True")
                            {
                                <li>@Html.ActionLink("Admin Users", "Index", "UsersAdmin")</li>
                            }
                        }

                        claim = claimsIdentity.FindFirst(c => c.Type == "AdmClaims");
                        if (claim != null)
                        {
                            if (claim.Value == "True")
                            {
                                <li>@Html.ActionLink("Admin Claims", "Index", "ClaimsAdmin")</li>
                            }
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Início", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sobre", "About", "Home")</li>
                        <li>@Html.ActionLink("Contato", "Contact", "Home")</li>
                    }

                }
            </ul>
            @*@Html.Partial("_LoginPartial")*@
        </div>
    </header>
</div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - VarçalSys Soluções</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
